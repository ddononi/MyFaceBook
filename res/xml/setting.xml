<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="알림설정" >

        <CheckBoxPreference
            android:key="alarm"
            android:defaultValue="true"
            android:summary="내 담벼락이 변경되면 알림을 설정합니다."
            android:title="알람설정" />

        <ListPreference
            android:dialogTitle="업데이트"
            android:entries="@array/time_list_preference"
            android:entryValues="@array/time_list_value_preference"
            android:key="repeat"
            android:defaultValue="@string/default_value_list_preference"
            android:summary="내 담벼락의 업데이트주기를 설정합니다."
            android:title="업데이트간격" />
        
    </PreferenceCategory>

    <PreferenceCategory android:title="알람방식설정" >

        <CheckBoxPreference
            android:key="sound"
            android:defaultValue="true"
            android:summary="알람이 발생하면 사운드로 알려줌"
            android:title="소리알림" />

        <CheckBoxPreference
            android:key="vibration"
            android:defaultValue="true"
            android:summary="알람이 발생하면  진동으로 알려줌"
            android:title="진동발생" />
    </PreferenceCategory>

    <PreferenceCategory android:title="버젼정보" >

        <PreferenceScreen
            android:key="version"
            android:summary="MyFaceBook Ver 0.9b"
            android:title="프로그램 버전" />
    </PreferenceCategory>

</PreferenceScreen>